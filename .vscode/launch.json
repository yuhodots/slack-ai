{
    "configurations": [
        {
            "name": "uvicorn app",
            "type": "python",
            "python": "python3.9",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "slack_ai.app:app",
                "--host", "0.0.0.0",
                "--port",  "30207",
                "--reload"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "app.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/slack_ai/app.py",
            "console": "integratedTerminal"
        }
    ]
}
